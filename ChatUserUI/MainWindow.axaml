<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="ChatUserUI.MainWindow"
        Width="600" Height="600"
        Title="Чат-клиент"
        Background="#1e1e1e">

  <Grid RowDefinitions="*,Auto">

    <!-- СООБЩЕНИЯ -->
    <ScrollViewer Grid.Row="0"
                  VerticalScrollBarVisibility="Auto"
                  Background="#1e1e1e">
      <StackPanel x:Name="ChatPanel" Margin="10" Spacing="8"/>
    </ScrollViewer>

    <!-- ВВОД -->
    <Border Grid.Row="1" Background="#2e2e2e" Padding="10">
      <Grid Height="40">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <TextBox x:Name="MessageBox"
                 Grid.Column="0"
                 Margin="0 0 10 0"
                 Background="#1e1e1e"
                 Foreground="White"
                 BorderThickness="1"
                 BorderBrush="#555"
                 FontSize="14"
                 KeyDown="MessageBox_KeyDown"
                 Watermark="Введите сообщение..." />

        <Button Grid.Column="1"
                Content="➤"
                FontSize="16"
                Padding="10,0"
                Click="Send_Click"
                Background="#4caf50"
                Foreground="White"
                BorderThickness="0" />
      </Grid>
    </Border>
  </Grid>
</Window>